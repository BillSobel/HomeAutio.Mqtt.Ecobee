{
  "ecobee": {
    "ecobeeName": "default",
    "ecobeeAppKey": "",
    "refreshInterval": 180
  },
  "mqtt": {
    "brokerIp": "localhost",
    "brokerPort": 1883,
    "brokerUsername": "",
    "brokerPassword": "",
    "brokerUseTls": false
  },
  "Serilog": {
    "Enrich": [ "FromLogContext" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/HomeAutio.Mqtt.Ecobee.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31
        }
      }
    ]
  }
}
